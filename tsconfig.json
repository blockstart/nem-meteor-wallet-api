{
    "compilerOptions": {
        "module": "none",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "noStrictGenericChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6","es2015","dom"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
	  "**/*.d.ts",
	  "node_modules/**",
	  "node_modules/**/*.ts",
	  "node_modules/**/*.d.ts",
	  "node_modules/@types/*"
    ]
}